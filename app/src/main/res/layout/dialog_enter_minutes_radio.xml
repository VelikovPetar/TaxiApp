<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_minutes"/>

    <RadioGroup
        android:id="@+id/radio_group_minutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/radio_button_minutes_2">

        <RadioButton
            android:id="@+id/radio_button_minutes_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>
        <RadioButton
            android:id="@+id/radio_button_minutes_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>
        <RadioButton
            android:id="@+id/radio_button_minutes_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp" />
        <RadioButton
            android:id="@+id/radio_button_minutes_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>
        <RadioButton
            android:id="@+id/radio_button_minutes_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10"
            android:textSize="20sp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"/>
    </RadioGroup>

</LinearLayout>