<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TableRow>

        <TextView
            android:id="@+id/text_view_timer"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/button_offers_info"
            android:background="@drawable/rounded_green"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textSize="25sp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="16dp"
            android:padding="8dp"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/button_messages_info"
            android:background="@drawable/rounded_green"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:textSize="25sp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="32dp"
            android:padding="8dp"
            android:textColor="#000000"
            />
        <TextView
            android:id="@+id/text_view_offers_info"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="25sp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_view_messages_info"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="25sp"
            android:visibility="gone"
            />

    </TableRow>

</TableLayout>