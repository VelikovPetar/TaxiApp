<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent">-->
        <TextView
            android:id="@+id/text_view_list_item_short_offer_source"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/text_view_list_item_short_offer_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"/>
    <!--</LinearLayout>-->
    <Button
        android:id="@+id/button_short_offer_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Потврди"
        android:textColor="#00FF00"/>
    <Button
        android:id="@+id/button_short_offer_reject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Откажи"
        android:textColor="#FF0000"/>

</LinearLayout>