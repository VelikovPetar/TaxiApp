<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_text"
        android:padding="8dp"
        android:textSize="25sp"/>

    <RadioGroup
        android:id="@+id/radio_group_choose_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:checkedButton="@+id/radio_button_destination_android">
        <RadioButton
            android:id="@+id/radio_button_destination_android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/android"/>
        <RadioButton
            android:id="@+id/radio_button_destination_dispatcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/dispatcher"/>
    </RadioGroup>
    <TextView
        android:id="@+id/text_view_message_destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:padding="8dp"/>

    <EditText
        android:id="@+id/edit_text_generated_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/message"/>

</LinearLayout>